set clipboard='unnamed,unnamedplus,ideaput'
set relativenumber
set ideajoin
" allow pretty much all motions to change lines
set whichwrap=b,s,h,l,<,>,[,]
" search can wrap
set wrapscan
" case-insensitive search unless mixed case search string
set ignorecase
set smartcase
set hlsearch
set incsearch
" allow moving one space past EOL
set virtualedit=onemore
set scrolloff=15
set peekaboo
set highlightedyank
set visualbell
set surround
set NERDTree
